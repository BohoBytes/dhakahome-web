# Environment
ENVIRONMENT=the-env

# Server
ADDR=:5173

# Mock Mode (Development)
# Set to true to use mock data instead of real API calls
# Useful for development without backend access
MOCK_ENABLED=false
MOCK_AUTH_ENABLED=false

# PORTAL
PORTAL_BASE_URL=http://localhost:8080/

# API
API_BASE_URL=http://localhost:3000/api/v1
# OAuth Client Credentials (Recommended - automatic token refresh)
# Get these from your Nestlo backend admin
API_CLIENT_ID=your-client-id-here
API_CLIENT_SECRET=your-client-secret-here
API_TOKEN_SCOPE=assets.read
API_AUTH_URL=http://localhost:3000/api/v1/oauth/token
# Static JWT Token (leave empty to use OAuth)
# Only use if OAuth is not available
API_AUTH_TOKEN=DHAKAHOME-TEST-123

# Contact
CONTACT_EMAIL=some-contact-email
CONTACT_PHONE_RENT=some-phone-no
CONTACT_PHONE_SALES=some-phone-no
PROPERY_ENQUIRY_EMAIL=some-contact-email

# Map (Mapbox GL JS)
MAPBOX_PUBLIC_TOKEN=mapbox-token
MAPBOX_STYLE_URL=
MAP_DEFAULT_LAT=
MAP_DEFAULT_LNG=
MAP_DEFAULT_ZOOM=11.2
